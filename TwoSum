import java.util.*;
public class Solution {
    public int[] twoSum(int[] numbers, int target) {
        // Start typing your Java solution below
        // DO NOT write main() function
        int i,j;
        int sum;
        int[] result = new int[2];
      Arrays.sort(numbers);
		i=0; 
		j=numbers.length-1;
		while (i!=j)
		 {
			sum=numbers[i]+numbers[j];
			
			 if (sum > target)
			 {
				 j--;				 
			 }
			 else if (sum < target)
			 {
				 i++;				 
			 }
			 else 
			 {
				result[0]=numbers[i];
                result[1]=numbers[j];
                return result;
			 }
		 }    
     return result;     
    }
}
